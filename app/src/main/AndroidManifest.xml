<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShopFun"
        tools:targetApi="31">
        <activity
            android:name=".OrderProductDetails"
            android:exported="true"
            android:label="@string/title_activity_order_product_details"
            android:theme="@style/Theme.ShopFun">
        </activity>
        <activity
            android:name=".OrderDetails"
            android:exported="true"
            android:label="@string/title_activity_order_details"
            android:theme="@style/Theme.ShopFun">
        </activity>
        <activity
            android:name=".GenerateOrder"
            android:exported="true"
            android:label="@string/title_activity_generate_order"
            android:theme="@style/Theme.ShopFun">
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ShopFun">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>